<section>
    {{> section-heading icon="thumbs-up" value="References"}}
    {{#if resume.references.length}}
        {{#each resume.references}}
            <section class="reference">
                <div class="column">
                    <div class="row">
                        {{#if reference}}
                        <i class="fa fa-quote-left" aria-hidden="true"></i>
                        <blockquote class="main">
                            {{reference}}
                        </blockquote>
                        {{/if}}
                    </div>

                    {{#if name}}
                        <h5 class="right">
                            <i class="fa fa-user-o" aria-hidden="true"></i>
                            {{name}}
                        </h5>
                    {{/if}}
                </div>
            </section>
        {{/each}}
    {{else}}
        <p>References are available on request</p>
    {{/if}}
</section>
