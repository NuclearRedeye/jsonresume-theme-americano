{{#if resume.skills.length}}
    <section>
        {{> title value="Skills"}}
        {{#each resume.skills}}
            <section class="skills">
                <div class="skills-header">
                    {{#if name}}
                        <h4 class="bold capitalize">{{name}}</h4>
                    {{/if}}
                    {{#if level}}
                        <h4 class="capitalize">{{level}}</h4>
                    {{/if}}
                </div>
                {{#if keywords.length}}
                    <div class="minimal flex-container">
                        {{#each keywords}}
                            <h6 class="chip">{{.}}</h6>
                        {{/each}}
                    </div>
                {{/if}}
            </section>
        {{/each}}
    </section>
{{/if}}
